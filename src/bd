
CREATE TABLE TUTOR (
userid INT AUTO_INCREMENT PRIMARY KEY,
firt_name VARCHAR (40) NOT NULL,
last_name VARCHAR (40) NOT NULL, 
birth_data DATE NOT NULL,
pet_name VARCHAR (40) NOT NULL, 
email VARCHAR (200) NOT NULL, 
telefone VARCHAR (40) NOT NULL
);


CREATE TABLE PET (
petid INT AUTO_INCREMENT PRIMARY KEY, 
pet_name VARCHAR (40) NOT NULL, 
cidade VARCHAR (40) NOT NULL, 
estado VARCHAR (40) NOT NULL, 
birth_date DATE NOT NULL, 
profile_photo VARCHAR (20) NOT NULL,
sexo VARCHAR (40) NOT NULL,
cor VARCHAR (40) NOT NULL,
porte VARCHAR (40) NOT NULL,
sobre VARCHAR (200) NOT NULL
);



CREATE TABLE MATCH_DATA (
id_match INT AUTO_INCREMENT PRIMARY KEY,
pet_id1 FOREIGN KEY (petid) REFERENCES pets(petid), ON DELETE CASCADE
pet_id2 FOREIGN KEY (petid) REFERENCES pets(petid), ON DELETE CASCADE
is_match BOOLEAN, 
data_match DATE NOT NULL
);
